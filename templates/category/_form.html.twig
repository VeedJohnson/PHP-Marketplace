{{ form_start(form, {'attr': {'class': 'row g-3'}}) }}
<div class="col-12">
    {{ form_label(form.name, null, {'label_attr': {'class': 'form-label'}}) }}
    {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
    {{ form_errors(form.name) }}
</div>
<div class="col-12">
    {{ form_label(form.description, null, {'label_attr': {'class': 'form-label'}}) }}
    {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
    {{ form_errors(form.description) }}
</div>
<div class="col-12">
    {{ form_label(form.isActive, null, {'label_attr': {'class': 'form-check-label'}}) }}
    <div class="form-check">
        {{ form_widget(form.isActive, {'attr': {'class': 'form-check-input'}}) }}
    </div>
    {{ form_errors(form.isActive) }}
</div>

<div class="col-12">
    <hr>
    <div class="d-flex justify-content-end gap-2">
        <a href="{{ path('app_category_index') }}" class="btn btn-outline-secondary">Cancel</a>
        <button type="submit" class="btn btn-primary px-4">{{ button_label|default('Save') }}</button>
    </div>
</div>
<div class="col-12 text-end">

</div>
{{ form_end(form) }}